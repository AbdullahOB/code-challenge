{
    "name": "express-crud-api",
    "version": "1.0.0",
    "description": "ExpressJS CRUD API with TypeScript and SQLite",
    "main": "dist/server.js",
    "scripts": {
        "dev": "nodemon src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "db:migrate": "node dist/scripts/migrate.js",
        "db:seed": "node dist/scripts/seed.js"
    },
    "keywords": [
        "express",
        "typescript",
        "crud",
        "api",
        "sqlite"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "sqlite3": "^5.1.6",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "morgan": "^1.10.0",
        "joi": "^17.11.0",
        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.0",
        "@types/cors": "^2.8.17",
        "@types/morgan": "^1.9.9",
        "@types/sqlite3": "^3.1.11",
        "@types/jest": "^29.5.8",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "eslint": "^8.54.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "nodemon": "^3.0.2",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.2"
    }
}